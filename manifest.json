{
    "manifest_version": 2,
    "name": "Natural Language to SQL",
    "version": "1.0",
    "description": "Translate natural language to SQL queries",
    "permissions": ["activeTab", "*://*.openai.com/*"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["popup.js"]
    }
    ],
    "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
    }
}